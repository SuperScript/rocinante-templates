# Send ssh key to enable use of private repos
ARG OP=clean

CMD test create != '${OP}' || test -n '${EMAIL}' || printf 'bootstrap: EMAIL not set\n' >&2; exit 100

PKG sshpass

CP sshkeys /tmp/

CMD test clean = '${OP}' && /tmp/sshkeys clean

CMD test create = '${OP}' && mail -s "Pubkey for $(hostname)" '${EMAIL}' < "$(/tmp/sshkeys create)"

